{
  "name": "secure-router",
  "version": "3.1.2",
  "description": "Helping you write more secure express apps.",
  "keywords": [
    "express",
    "security"
  ],
  "main": "build/index.js",
  "author": "Good Eggs Inc.",
  "contributors": [
    "Max Edmands <max@goodeggs.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/goodeggs/secure-router.git"
  },
  "scripts": {
    "prepublish": "yarn build",
    "build": "rm -rf build/ && babel src -d build",
    "test:mocha": "NODE_ENV=test mocha --compilers=js:babel-register test.js",
    "test:watch": "yarn test:mocha -- --watch",
    "test": "yarn lint && yarn test:mocha --",
    "lint": "yarn run lint:src && yarn run lint:prettier",
    "lint:src": "yarn run lint:src:glob '**/*.{js,jsx,ts,tsx}'",
    "lint:src:glob": "getk run lint-es --ignore-path .gitignore",
    "lint:prettier": "yarn run lint:prettier:glob '**/*.{yml,json,md,gql,graphql}'",
    "lint:prettier:glob": "prettier --ignore-path .gitignore --list-different"
  },
  "dependencies": {
    "async": "^2.1.4",
    "bluebird": "^3.4.1",
    "debug": "^2.6.0",
    "lodash": "^4.13.1",
    "path-to-regexp": "^1.5.3",
    "router": "^1.3.1"
  },
  "devDependencies": {
    "@goodeggs/toolkit": "^7.0.1",
    "babel-cli": "^6.10.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "express": "^4.14.0",
    "in-publish": "^2.0.0",
    "mocha": "^2.5.3",
    "request": "^2.73.0"
  },
  "eslintConfig": {
    "plugins": [
      "goodeggs"
    ],
    "extends": [
      "plugin:goodeggs/goodeggs"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "prefer-reflect": 0,
      "no-eq-null": 0
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
